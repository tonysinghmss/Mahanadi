<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tony.odiya.mahanadi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:name=".application.App"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ManagerActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".activity.AddExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:parentActivityName=".activity.ManagerActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tony.odiya.mahanadi.activity.ManagerActivity" />
        </activity>
        <!--<activity android:pointName=".activity.SearchResultsActivity">
            <intent-filter>
                <action android:pointName="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>-->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:noHistory="true"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

        <provider
            android:name=".provider.MahanadiDataProvider"
            android:authorities="@string/authority"
            android:exported="false" />

    </application>

</manifest>