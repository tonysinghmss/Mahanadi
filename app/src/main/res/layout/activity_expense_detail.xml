<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.tony.odiya.mahanadi.activity.ExpenseDetailActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/expense_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
    <TextView
        android:id="@+id/expense_detail_item_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_horiz_margin"
        android:layout_marginTop="@dimen/expense_detail_vert_margin"
        android:visibility="visible"
        android:text="@string/item_hint"
        />
    <TextView
        android:id="@+id/expense_detail_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expense_detail_edit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/item_hint"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:inputType="textCapSentences|textAutoCorrect"
        android:maxLength="16"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/expense_detail_category_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:visibility="visible"
        android:text="@string/category_hint"
        />
    <TextView
        android:id="@+id/expense_detail_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expense_detail_edit_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/category_hint"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:inputType="textCapSentences|textAutoCorrect"
        android:maxLength="16"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/expense_detail_amount_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:visibility="visible"
        android:text="@string/amount_hint"
        />
    <TextView
        android:id="@+id/expense_detail_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expense_detail_edit_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount_hint"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:inputType="numberDecimal"
        android:maxLength="20"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/expense_detail_remark_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:visibility="visible"
        android:text="@string/remark_hint"
        />
    <TextView
        android:id="@+id/expense_detail_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
        android:layout_marginLeft="@dimen/expense_detail_vert_margin"
        android:layout_marginRight="@dimen/expense_detail_vert_margin"
        android:layout_marginTop="@dimen/expense_detail_horiz_margin"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expense_detail_edit_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/remark_hint"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:textAppearance="?attr/textAppearanceListItem"
        android:inputType="textCapSentences|textAutoCorrect"
        android:maxLength="40"
        android:visibility="gone"
        />
</LinearLayout>
