<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp">
    <android.support.constraint.Guideline
        android:id="@+id/guidelinev5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.05"
        card_view:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.34" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.66" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev95"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow1Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow1Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.20" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow2Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.22" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow2Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.37" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow3Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.39" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow3Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.54" />
    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow4Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.56" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow4Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.71" />
    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow5Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.73" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow5Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.88" />
    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRowFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.90" />
    <TextView
        android:id="@+id/expense_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_detail_header"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow1Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow1Bottom"
        android:layout_marginTop="8dp"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev5"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev50"
        android:layout_marginStart="@dimen/card_text_margin_start"
        />
    <TextView
        android:id="@+id/expense_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/expense_time"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow1Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow1Bottom"
        android:layout_marginTop="8dp"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev95"
        android:layout_marginStart="@dimen/card_text_margin_start"
        />
    <TextView
        android:id="@+id/item_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow2Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow2Bottom"
        android:layout_marginTop="8dp"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev5"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev50"
        android:layout_marginStart="@dimen/card_text_margin_start"
        android:labelFor="@+id/expanded_edit_item"

        />
    <TextView
        android:id="@+id/expanded_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow2Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow2Bottom"
        android:layout_marginTop="8dp"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev95"
        card_view:layout_constraintBaseline_toBaselineOf="@id/item_label"
        android:layout_marginStart="@dimen/card_text_margin_start"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expanded_edit_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow2Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow2Bottom"
        android:layout_marginTop="8dp"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev95"
        card_view:layout_constraintBaseline_toBaselineOf="@id/item_label"
        android:layout_marginStart="@dimen/edit_text_margin_start"
        android:inputType="textCapSentences|textAutoCorrect"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/amount_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow3Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow3Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev5"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev50"
        android:text="@string/amount_hint"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:labelFor="@+id/expanded_edit_amount"
        />
    <TextView
        android:id="@+id/expanded_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow3Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow3Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev95"
        android:text="@string/amount_hint"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintBaseline_toBaselineOf="@id/amount_label"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expanded_edit_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow3Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow3Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/edit_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev95"
        android:text="@string/amount_hint"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintBaseline_toBaselineOf="@id/amount_label"
        android:inputType="numberDecimal"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow4Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow4Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev5"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev50"
        android:text="@string/category_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        android:labelFor="@+id/expanded_edit_category"
        />
    <TextView
        android:id="@+id/expanded_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow4Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow4Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev95"
        android:text="@string/category_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintBaseline_toBaselineOf="@id/category_label"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expanded_edit_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow4Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow4Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/edit_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev95"
        android:text="@string/category_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintBaseline_toBaselineOf="@id/category_label"
        android:inputType="textCapSentences|textAutoCorrect"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/remark_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow5Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow5Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev5"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev50"
        android:text="@string/remark_hint"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        android:labelFor="@+id/expanded_edit_remark"
        />
    <TextView
        android:id="@+id/expanded_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow5Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow5Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev95"
        android:text="@string/remark_hint"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintBaseline_toBaselineOf="@id/remark_label"
        android:visibility="visible"
        />
    <EditText
        android:id="@+id/expanded_edit_remark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow5Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow5Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/edit_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev50"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev95"
        android:text="@string/remark_hint"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintBaseline_toBaselineOf="@id/remark_label"
        android:inputType="textCapSentences|textAutoCorrect"
        android:visibility="gone"
        />

</android.support.constraint.ConstraintLayout>