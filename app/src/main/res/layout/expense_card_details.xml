<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.Guideline
        android:id="@+id/guidelinev2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.02"
        card_view:layout_constraintTop_toTopOf="parent"/>

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.34" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev66"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.66" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinev98"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        card_view:layout_constraintGuide_percent="0.98" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow1Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.05" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow1Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelinehRow2Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        card_view:layout_constraintGuide_percent="0.6" />

    <TextView
        android:id="@+id/category"
        android:layout_width="120dp"
        android:layout_height="32dp"
        android:text="@string/category_hint"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintLeft_toLeftOf="@id/guidelinev2"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow1Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow1Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
         />

    <TextView
        android:id="@+id/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow1Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow1Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev34"
        card_view:layout_constraintRight_toLeftOf="@id/guidelinev66"
        card_view:layout_constraintBaseline_toBaselineOf="@id/category"
        android:text="@string/item_hint"
        android:textAppearance="?attr/textAppearanceListItem"
         />
    <TextView
        android:id="@+id/amount"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        card_view:layout_constraintTop_toTopOf="@id/guidelinehRow1Top"
        card_view:layout_constraintBottom_toTopOf="@id/guidelinehRow1Bottom"
        android:layout_marginTop="8dp"
        android:layout_marginStart="@dimen/card_text_margin_start"
        card_view:layout_constraintLeft_toRightOf="@id/guidelinev66"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev98"
        android:text="@string/amount_hint"
        card_view:layout_constraintBaseline_toBaselineOf="@id/category"
        android:layout_marginEnd="8dp"
        android:textAppearance="?attr/textAppearanceListItem"
         />
    <TextView
        android:id="@+id/remark"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:textAppearance="?attr/textAppearanceListItem"
        card_view:layout_constraintTop_toBottomOf="@id/guidelinehRow2Top"
        card_view:layout_constraintLeft_toLeftOf="@id/guidelinev2"
        android:text="@string/remark_hint"
        card_view:layout_constraintRight_toRightOf="@id/guidelinev98"
        card_view:layout_constraintHorizontal_bias="0.4"
        android:layout_marginStart="@dimen/card_text_margin_start"
        android:layout_marginTop="@dimen/card_text_margin_top"
        />
</android.support.constraint.ConstraintLayout>