<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tony.odiya.mahanadi.fragment.AnalysisFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/analysis_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/analysis_trend_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
            android:layout_marginLeft="@dimen/expense_detail_vert_margin"
            android:layout_marginRight="@dimen/expense_detail_vert_margin"
            android:layout_marginTop="@dimen/expense_detail_horiz_margin"
            android:visibility="visible"
            android:text="@string/analysis_trend"
            />
        <Spinner
            android:id="@+id/analysis_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/expense_detail_horiz_margin"
            android:gravity="center"
            android:elevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/analysis_trend_textview"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/graph_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/analysis"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/analysis_spinner"
            />
        <com.jjoe64.graphview.GraphView
            android:id="@+id/analysis_graph"
            android:layout_width="match_parent"
            android:layout_height="350dip"
            app:layout_constraintTop_toBottomOf="@id/graph_header"/>
        <Spinner
            android:id="@+id/analysis_time_trend_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/expense_detail_horiz_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/expense_detail_horiz_margin"
            android:gravity="center"
            android:elevation="3dp"
            app:layout_constraintTop_toBottomOf="@id/analysis_graph"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
